{
  "compilerOptions": {

    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "@/*": [
        "../../front-end/src/*"
      ]
    },
    "outDir": "./build"
  },

  "include": [
    "../../front-end/src/**/*.ts",
    "../../front-end/src/**/*.tsx",
    "./*.ts"
  ]
}